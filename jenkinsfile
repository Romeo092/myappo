pipeline {
    agent any

    parameters{
       string (name:'appo', defaultValue:'1.0.3')
    }
    stages{
        stage("built image"){
            steps{
                script{ // This step should not normally be used in your script. Consult the inline help for details.
                     withDockerRegistry(credentialsId: 'ecr:us-east-1:romeo-id', url: 'https://ec2-100-25-202-201.compute-1.amazonaws.com/') {
                     sh  "docker build -t romeo_cre:${params.appo} ."
                     sh "docker tag romeo_cre:${params.appo} 536442977594.dkr.ecr.us-east-1.amazonaws.com/romeo_cre:${params.appo}"
                     sh "docker tag romeo_cre:${params.appo} 536442977594.dkr.ecr.us-east-1.amazonaws.com/romeo_cre:latest"
                     sh "docker push 536442977594.dkr.ecr.us-east-1.amazonaws.com/romeo_cre:latest"
                     }
                }
            }
        }
    }
}
